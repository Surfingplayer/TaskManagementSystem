@model TaskManagementSystem.Models.Employee

@{
    ViewData["Title"] = "Login";
}
<br />
<br />
<br />
<div>
    <center>
        <div class="card" style="width:500px;border-radius:40px;padding:20px;">
            <h4>Login</h4>

            <div class="row">
                <center>
                    <div class="col-5">
                        <hr />
                    </div>
                    <div class="col-6">

                        <form asp-action="Login">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            @if (ViewBag.LoginError != null)
                            {
                                <div class="alert alert-danger">
                                    @ViewBag.LoginError
                                </div>
                            }
                            <table>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="EmpEmail" class="control-label">Email</label>
                                            <input asp-for="EmpEmail" class="form-control" />
                                            <span asp-validation-for="EmpEmail" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                                <tr>
                                    <td>
                                        <div class="form-group">
                                            <label asp-for="EmpPassword" class="control-label">Password</label>
                                            <input asp-for="EmpPassword" class="form-control" />
                                            <span asp-validation-for="EmpPassword" class="text-danger"></span>
                                        </div>
                                    </td>
                                </tr>
                            </table>
                            <br />
                            <div class="form-group">
                                <input type="submit" value="Login" class="btn btn-primary" />
                            </div>
                        </form>
                    </div>
            </div>
                </center>

              
        </div>
       
    </center>
  
   
    
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
